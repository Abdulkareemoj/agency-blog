---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FAQ from "../components/FAQ.astro";
import CTA from "../components/CTA.astro";
import Details from "../components/Details.astro";
import Special from "../components/Special.astro";
import Testimonials from "../components/Testimonials.astro";
import Contact from "../components/Contact.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image="" />
  </head>
  <div
    class="fixed flex items-center justify-between gap-4 bg-emerald-600 px-4 py-1 text-white"
  >
    <p class="text-sm font-medium">
      Love Alpine JS?
      <a href="#" class="inline-block underline">Check out this new course!</a>
    </p>

    <button
      aria-label="Dismiss"
      class="shrink-0 rounded-lg bg-black/10 p-1 transition hover:bg-black/20"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
          clip-rule="evenodd"></path>
      </svg>
    </button>
  </div>
  <Header />
  <body class="container mx-auto px-12 dark:bg-gray-900 prose lg:prose-xl">
    <CTA />
    <Details />
    <FAQ />
    <Special />
    <Testimonials />
    <Contact />
    <Footer />
  </body>
</html>
